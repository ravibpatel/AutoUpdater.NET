<Window x:Class="AutoUpdaterTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Topmost="True"
        Title="MainWindow" Height="200" Width="400" ResizeMode="NoResize" Icon="/Resources/icon.png">
    <Grid Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelVersion" Content="Current Version : 1.0.0.0" HorizontalAlignment="Center"
               VerticalAlignment="Center" RenderTransformOrigin="0.49,0.176" Grid.ColumnSpan="2" Grid.Row="0"
               Grid.Column="0"
               Width="180" />
        <Button x:Name="ButtonCheckForUpdate" Content="Check for Update" HorizontalAlignment="Center" Margin="0,20,0,0"
                VerticalAlignment="Center" Width="180" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1" Height="30"
                Click="ButtonCheckForUpdate_Click" />
    </Grid>
</Window>